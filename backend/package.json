{
  "name": "ruzmovie",
  "version": "1.0.0",
  "description": "Full-stack RuzMovie app (React + Express + Sequelize)",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cross-env NODE_ENV=development nodemon server.js",
    "dev:client": "npm start --prefix frontend",
    "build": "npm install --prefix frontend && npm run build --prefix frontend",
    "start": "cross-env NODE_ENV=production node server.js",
    "init-db": "cross-env NODE_ENV=development node backend/src/initDatabase.js",
    "test-connection": "node backend/src/testDeployedConnection.js",
    "test-videos": "node backend/src/testVideosEndpoint.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.9.7",
    "pg": "^8.11.5",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.3",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "nodemon": "^3.1.0"
  },
  "author": "Ruslanbek Begmurodov",
  "license": "MIT"
}
